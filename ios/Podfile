platform :ios, '12.0'

use_frameworks!
use_modular_headers!

target 'Runner' do
  flutter_application_path = File.join('..', '.flutter-plugins')
  eval(File.read(File.join(flutter_application_path, 'flutter_application.podspec')), binding)

  # Ensure Flutter headers are found
  pod 'Flutter', :path => '../.symlinks/flutter/ios'

  # Ensure plugins resolve properly
  install_all_flutter_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
