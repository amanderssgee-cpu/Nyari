# From C:\flutter_projects\first_flutter_app
@'
platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

install! 'cocoapods', :warn_for_multiple_pod_sources => false

# ----------------------------------------------------------------------
# Flutter integration (resolve real flutter SDK path)
# ----------------------------------------------------------------------
flutter_bin = `which flutter`.strip
flutter_root = File.expand_path('..', File.dirname(File.realpath(flutter_bin)))
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Static frameworks keep Swift interop and avoid many modulemap issues
  use_frameworks! :linkage => :static
  use_modular_headers!

  # gRPC pins (use available patch version from CDN)
  pod 'gRPC-ProtoRPC', '~> 1.62'
  pod 'gRPC-C++',      '~> 1.62'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
  flutter_post_install(installer) if defined?(flutter_post_install)
end
'@ | Set-Content -Encoding ascii -NoNewline ios\Podfile

git add ios\Podfile
git commit -m "iOS Podfile: switch to gRPC-ProtoRPC and loosen pins (~> 1.62)"
git pull --rebase origin main
git push origin main
