Set-Location "C:\flutter_projects\first_flutter_app"

$pod = @'
platform :ios, '14.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

install! 'cocoapods', :warn_for_multiple_pod_sources => false

# Flutter integration (resolve real flutter SDK path)
flutter_bin = `which flutter`.strip
flutter_root = File.expand_path('..', File.dirname(File.realpath(flutter_bin)))
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Let CocoaPods resolve the latest available on the runner CDN
  pod 'gRPC-ProtoRPC'
  pod 'gRPC-C++'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # Force iOS 14.0 on ALL pods and the user target to satisfy ML Kit + Firebase
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
  installer.aggregate_targets.each do |aggregate|
    aggregate.user_targets.each do |ut|
      ut.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      end
    end
  end
  flutter_post_install(installer) if defined?(flutter_post_install)
end
'@

$pod | Set-Content -Encoding ascii -NoNewline ios\Podfile

git add ios\Podfile
git commit -m "iOS: bump deployment target to 14.0 (ML Kit requirement); enforce for Pods + Runner"
git pull --rebase origin main
git push origin main
