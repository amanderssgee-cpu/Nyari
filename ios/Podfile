platform :ios, '16.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Quiet multi-source warnings
install! 'cocoapods', :warn_for_multiple_pod_sources => false

# Flutter integration
flutter_bin  = %x(which flutter).strip
flutter_root = File.expand_path('..', File.dirname(File.realpath(flutter_bin)))
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
flutter_ios_podfile_setup

target 'Runner' do
  # Build pods as **static frameworks** (generates -Swift.h for Swift pods)
  use_frameworks! :linkage => :static

  # Expose ObjC pods as modules
  use_modular_headers!

  # gRPC toolchain as modules (fixes modulemap lookups)
  pod 'gRPC-C++',       :modular_headers => true
  pod 'gRPC-Core',      :modular_headers => true
  pod 'gRPC-ProtoRPC',  :modular_headers => true
  pod 'BoringSSL-GRPC', :modular_headers => true

  # Make Firebase umbrella header a module so frameworks can import <Firebase/Firebase.h>
  pod 'Firebase', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    # Keep Flutter/Pods build settings aligned
    begin
      flutter_additional_ios_build_settings(t)
    rescue
    end

    t.build_configurations.each do |config|
      s = config.build_settings

      # Baseline + simulator arch workaround
      s['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      s['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'

      # Framework-like behavior so Swift umbrellas resolve cleanly
      s['DEFINES_MODULE'] = 'YES'
      s['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      # Leave OFF for static frameworks
      s['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
    end
  end
end
