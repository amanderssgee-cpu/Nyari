platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

install! 'cocoapods', :warn_for_multiple_pod_sources => false

# Flutter integration
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), File.dirname(`which flutter`))

flutter_root = File.expand_path('..', File.dirname(`which flutter`))
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static   # <â€” Static frameworks are safe with most pods
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Your plugins (kept implicit via flutter_install_all_ios_pods)
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      # Ensure iOS 13+ (prevents transitive pods from downgrading)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # Avoid simulator arch issues locally; harmless on CI archive
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
  flutter_post_install(installer) if defined?(flutter_post_install)
end
