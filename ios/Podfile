# ios/Podfile

# Minimum iOS version (required by google_mlkit_commons and newer Firebase)
platform :ios, '13.0'

# Good defaults for Flutter pods
use_frameworks! :linkage => :static
use_modular_headers!

# Flutter helper
require File.expand_path(File.join('..', 'Flutter', 'podhelper'), __FILE__)
flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # Ensure ALL pods (and Xcode build settings for pods) target iOS 15.5
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
    end
    # Keep Flutterâ€™s extra settings (bitcode off, etc.)
    flutter_additional_ios_build_settings(t)
  end
end
