platform :ios, '16.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

install! 'cocoapods', :warn_for_multiple_pod_sources => false

# Flutter integration
flutter_bin = %x(which flutter).strip
flutter_root = File.expand_path('..', File.dirname(File.realpath(flutter_bin)))
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Build pods statically (no dynamic frameworks â€” avoids non-modular header drama)
  use_modular_headers!

  # Ensure gRPC toolchain has modulemaps visible to the compiler
  pod 'gRPC-C++',       :modular_headers => true
  pod 'gRPC-Core',      :modular_headers => true
  pod 'gRPC-ProtoRPC',  :modular_headers => true
  pod 'BoringSSL-GRPC', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # CocoaPods 1.16-safe: operate on the generated Xcode targets directly
  installer.pods_project.targets.each do |t|
    # Required so Flutter & Pods agree on build flags
    flutter_additional_ios_build_settings(t)

    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      # Speed up simulator builds on Intel hosts / avoid M1-only arch there
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      # Keep this OFF for static pods (prevents non-modular include masking)
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'NO'
      # Do NOT turn these on for static pods:
      config.build_settings.delete('BUILD_LIBRARY_FOR_DISTRIBUTION')
      config.build_settings.delete('DEFINES_MODULE')
    end
  end
end
